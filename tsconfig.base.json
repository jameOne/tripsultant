{
  "compileOnSave": false,
  "compilerOptions": {
    "rootDir": ".",
    "sourceMap": true,
    "declaration": false,
    "moduleResolution": "node",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "importHelpers": true,
    "target": "es2015",
    "module": "esnext",
    "typeRoots": ["node_modules/@types"],
    "lib": ["es2017", "dom"],
    "skipLibCheck": true,
    "skipDefaultLibCheck": true,
    "baseUrl": "./",
    "paths": {
      "@tripsultant/ngrx-analytics": ["libs/ngrx-analytics/src/index.ts"],
      "@tripsultant/ngrx-atlas": ["libs/ngrx-atlas/src/index.ts"],
      "@tripsultant/map-utils": ["libs/map-utils/src/index.ts"]
    }
  },
  "exclude": ["node_modules", "tmp"]
}
